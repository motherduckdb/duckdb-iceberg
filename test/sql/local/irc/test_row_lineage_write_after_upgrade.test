# name: test/sql/local/irc/test_row_lineage_write_after_upgrade.test
# description: test integration with iceberg catalog read
# group: [irc]

require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

# Do not ignore 'HTTP' error messages!
set ignore_error_messages

statement ok
set enable_logging=true

statement ok
set logging_level='debug'

statement ok
CREATE SECRET (
    TYPE S3,
    KEY_ID 'admin',
    SECRET 'password',
    ENDPOINT '127.0.0.1:9000',
    URL_STYLE 'path',
    USE_SSL 0
);

statement ok
ATTACH '' AS my_datalake (
    TYPE ICEBERG,
    CLIENT_ID 'admin',
    CLIENT_SECRET 'password',
    ENDPOINT 'http://127.0.0.1:8181'
);

# INSERT as the first V3 snapshot
statement ok
begin transaction

statement ok
INSERT into my_datalake.default.row_lineage_test_upgraded VALUES
	(8, 'not_replaced'),
	(9, 'also_not_replaced');

query IIII
select rowid, sequence_number, id, data from my_datalake.default.row_lineage_test_upgraded order by id;
----
1	5	1	replaced
3	2	2	b_u1
4	2	4	d_u1
2	5	6	replaced
0	7	7	g_new
5	8	8	not_replaced
6	8	9	also_not_replaced

statement ok
abort;

# DELETE as the first V3 snapshot
statement ok
begin transaction

statement ok
DELETE FROM my_datalake.default.row_lineage_test_upgraded
	WHERE (id IN (2,6))

query IIII
select rowid, sequence_number, id, data from my_datalake.default.row_lineage_test_upgraded order by id;
----
1	5	1	replaced
4	2	4	d_u1
0	7	7	g_new

statement ok
abort;

# UPDATE as the first V3 snapshot
statement ok
begin transaction

statement ok
UPDATE my_datalake.default.row_lineage_test_upgraded
SET data = 'replaced_again'
WHERE id IN (2, 6);

query IIII
select rowid, sequence_number, id, data from my_datalake.default.row_lineage_test_upgraded order by id;
----
1	5	1	replaced
3	8	2	replaced_again
4	2	4	d_u1
2	8	6	replaced_again
0	7	7	g_new

statement ok
abort;
