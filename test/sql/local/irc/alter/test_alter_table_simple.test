require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

# Do not ignore 'HTTP' error messages!
set ignore_error_messages

statement ok
CALL enable_logging('HTTP');

statement ok
set logging_level='debug';

statement ok
CREATE SECRET (
    TYPE S3,
    KEY_ID 'admin',
    SECRET 'password',
    ENDPOINT '127.0.0.1:9000',
    URL_STYLE 'path',
    USE_SSL 0
);


statement ok
ATTACH '' AS my_datalake (
    TYPE ICEBERG,
    CLIENT_ID 'admin',
    CLIENT_SECRET 'password',
    ENDPOINT 'http://127.0.0.1:8181'
);

statement ok
use my_datalake.default;

statement ok
drop table if exists test_alter_table_primitives;

statement ok
create table test_alter_table_primitives (a int, b long, c date, d float);

statement ok
insert into test_alter_table_primitives values (1, 2, '2024-10-20'::DATE, 12.1212);

statement ok
ALTER table test_alter_table_primitives ALTER COLUMN a SET DATA TYPE LONG;