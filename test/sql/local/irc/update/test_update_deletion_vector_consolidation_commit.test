# name: test/sql/local/irc/update/test_update_deletion_vector_consolidation_commit.test
# description: test integration with iceberg catalog read
# group: [update]

require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

# Do not ignore 'HTTP' error messages!
set ignore_error_messages

statement ok
set enable_logging=true

statement ok
set logging_level='debug'

statement ok
CREATE SECRET (
    TYPE S3,
    KEY_ID 'admin',
    SECRET 'password',
    ENDPOINT '127.0.0.1:9000',
    URL_STYLE 'path',
    USE_SSL 0
);


statement ok
ATTACH '' AS my_datalake (
    TYPE ICEBERG,
    CLIENT_ID 'admin',
    CLIENT_SECRET 'password',
    ENDPOINT 'http://127.0.0.1:8181'
);

statement ok
drop table if exists my_datalake.default.tbl;

statement ok
create table my_datalake.default.tbl (
	id INTEGER,
	data VARCHAR
) WITH (
	'format-version' = 3
);

statement ok
begin transaction;

statement ok
insert into my_datalake.default.tbl values
	(1, 'a'),
	(2, 'b'),
	(3, 'c'),
	(4, 'd'),
	(5, 'e');

query IIII
select sequence_number, rowid, id, data from my_datalake.default.tbl order by rowid;
----
1	0	1	a
1	1	2	b
1	2	3	c
1	3	4	d
1	4	5	e

# Create the first delete on the table
statement ok
UPDATE my_datalake.default.tbl
SET data = data || '_u1'
WHERE id IN (2, 4);

query IIII
select sequence_number, rowid, id, data from my_datalake.default.tbl order by rowid;
----
1	0	1	a
2	1	2	b_u1
1	2	3	c
2	3	4	d_u1
1	4	5	e

# Create a new delete that needs to invalidate the existing delete and include its contents
statement ok
DELETE FROM my_datalake.default.tbl
WHERE id = 5;

query IIII
select sequence_number, rowid, id, data from my_datalake.default.tbl order by rowid;
----
1	0	1	a
2	1	2	b_u1
1	2	3	c
2	3	4	d_u1

# Create a new delete that needs to invalidate the existing delete and include its contents
statement ok
UPDATE my_datalake.default.tbl
SET data = data || '_u3'
WHERE id IN (1, 4);

query IIII
select sequence_number, rowid, id, data from my_datalake.default.tbl order by rowid;
----
4	0	1	a_u3
2	1	2	b_u1
1	2	3	c
4	3	4	d_u1_u3

statement ok
commit;

query IIII
select sequence_number, rowid, id, data from my_datalake.default.tbl order by rowid;
----
4	0	1	a_u3
2	1	2	b_u1
1	2	3	c
4	3	4	d_u1_u3
