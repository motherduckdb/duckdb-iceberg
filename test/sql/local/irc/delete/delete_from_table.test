# name: test/sql/local/irc/delete/delete_from_table.test
# description: test integration with iceberg catalog read
# group: [delete]

require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

# Do not ignore 'HTTP' error messages!
set ignore_error_messages

statement ok
pragma enable_logging('HTTP');

statement ok
set logging_level='debug'

statement ok
CREATE SECRET (
    TYPE S3,
    KEY_ID 'admin',
    SECRET 'password',
    ENDPOINT '127.0.0.1:9000',
    URL_STYLE 'path',
    USE_SSL 0
);


statement ok
ATTACH '' AS my_datalake (
    TYPE ICEBERG,
    CLIENT_ID 'admin',
    CLIENT_SECRET 'password',
    ENDPOINT 'http://127.0.0.1:8181'
);

statement ok
drop table if exists my_datalake.default.test_delete_table;

statement ok
create table my_datalake.default.test_delete_table (a int);

loop i 0 5

statement ok
insert into my_datalake.default.test_delete_table values ((${i}*2)) ((${i}*2) + 1);

endloop

statement ok
delete from my_datalake.default.test_delete_table where a%2 = 0;

query I
select * from my_datalake.default.test_delete_table;
----
1
3
5
7
9

statement ok
drop table my_datalake.default.test_delete_table;