# name: test/sql/local/irc/delete/test_delete_consolidation_transactional.test
# description: test integration with iceberg catalog read
# group: [delete]

require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

# Do not ignore 'HTTP' error messages!
set ignore_error_messages

statement ok
set enable_logging=true

statement ok
set logging_level='debug'

statement ok
CREATE SECRET (
    TYPE S3,
    KEY_ID 'admin',
    SECRET 'password',
    ENDPOINT '127.0.0.1:9000',
    URL_STYLE 'path',
    USE_SSL 0
);


statement ok
ATTACH '' AS my_datalake (
    TYPE ICEBERG,
    CLIENT_ID 'admin',
    CLIENT_SECRET 'password',
    ENDPOINT 'http://127.0.0.1:8181'
);

statement ok
drop table if exists my_datalake.default.write_v3_update_and_delete;

statement ok
create table my_datalake.default.write_v3_update_and_delete (
	id INTEGER,
	data VARCHAR
) WITH (
	'format-version' = 3
);

statement ok
insert into my_datalake.default.write_v3_update_and_delete values
	(1, 'a'),
	(2, 'b'),
	(3, 'c'),
	(4, 'd'),
	(5, 'e');

query IIII
select sequence_number, rowid, id, data from my_datalake.default.write_v3_update_and_delete order by rowid;
----
1	0	1	a
1	1	2	b
1	2	3	c
1	3	4	d
1	4	5	e

# Create the first delete on the table
statement ok
UPDATE my_datalake.default.write_v3_update_and_delete
SET data = data || '_u1'
WHERE id IN (2, 4);

query IIII
select sequence_number, rowid, id, data from my_datalake.default.write_v3_update_and_delete order by rowid;
----
1	0	1	a
2	1	2	b_u1
1	2	3	c
2	3	4	d_u1
1	4	5	e

statement ok
begin transaction;

# Create a new delete that needs to invalidate the existing delete and include its contents
statement ok
DELETE FROM my_datalake.default.write_v3_update_and_delete
WHERE id IN (3, 5);

query IIII
select sequence_number, rowid, id, data from my_datalake.default.write_v3_update_and_delete order by rowid;
----
1	0	1	a
2	1	2	b_u1
2	3	4	d_u1

# Create yet another delete in the same transaction
statement ok
DELETE FROM my_datalake.default.write_v3_update_and_delete
WHERE id = 2;

# The first transaction's delete should now be skipped, and only the last delete should be used
query IIII
select sequence_number, rowid, id, data from my_datalake.default.tbl order by rowid;
----
1	0	1	a
2	3	4	d_u1

statement ok
abort
