# name: test/sql/local/irc/delete/delete_same_transaction.test
# description: Test ducklake deleting and creating in the same transaction
# group: [delete]

require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

# Do not ignore 'HTTP' error messages!
set ignore_error_messages

statement ok
CALL enable_logging('HTTP');

statement ok
set logging_level='debug'

statement ok
CREATE SECRET (
    TYPE S3,
    KEY_ID 'admin',
    SECRET 'password',
    ENDPOINT '127.0.0.1:9000',
    URL_STYLE 'path',
    USE_SSL 0
);


statement ok
ATTACH '' AS my_datalake (
    TYPE ICEBERG,
    CLIENT_ID 'admin',
    CLIENT_SECRET 'password',
    ENDPOINT 'http://127.0.0.1:8181'
);


statement ok
DROP TABLE IF EXISTS my_datalake.default.test;

statement ok
BEGIN

statement ok
CREATE TABLE my_datalake.default.test AS SELECT i id FROM range(1000) t(i);

query I
DELETE FROM my_datalake.default.test WHERE id%2=0
----
500

query I
SELECT COUNT(*) FROM my_datalake.default.test WHERE id<=250
----
125

query I
DELETE FROM my_datalake.default.test WHERE id<=250
----
125

query I
SELECT COUNT(*) FROM my_datalake.default.test WHERE id<=250
----
0

query II
SELECT COUNT(*), COUNT(*) FILTER(WHERE id%2=0) FROM my_datalake.default.test
----
375	0

statement ok
COMMIT

# verify that we only have one delete file written after the commit (i.e. we cleaned up the first file
# query I
# SELECT COUNT(*) FROM glob('__TEST_DIR__/ducklake_delete_same_transaction_files/main/test/*-delete.parquet')
# ----
# 1

query II
SELECT COUNT(*), COUNT(*) FILTER(WHERE id%2=0) FROM my_datalake.default.test
----
375	0
