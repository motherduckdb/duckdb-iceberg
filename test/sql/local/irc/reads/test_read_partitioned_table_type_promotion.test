# name: test/sql/local/irc/reads/test_read_partitioned_table_type_promotion.test
# group: [reads]

require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

require icu

require ducklake

# Do not ignore 'HTTP' error messages!
set ignore_error_messages

statement ok
SET TimeZone = 'UTC';

statement ok
CREATE SECRET (
    TYPE S3,
    KEY_ID 'admin',
    SECRET 'password',
    ENDPOINT '127.0.0.1:9000',
    URL_STYLE 'path',
    USE_SSL 0
);

statement ok
ATTACH '' AS my_datalake (
    TYPE ICEBERG,
    CLIENT_ID 'admin',
    CLIENT_SECRET 'password',
    ENDPOINT 'http://127.0.0.1:8181'
);

statement ok
call enable_logging(level='debug');

query II
select id, count(*) from my_datalake.default.type_promotion_partitioned_table where id >= 3 and id <=6 group by all order by id;
----
3	6
4	8
5	7
6	8

# reading from files where id was integer and where id was long
query II
select request.url[79:84] partitioned_url, count(*) from duckdb_logs_parsed('HTTP') where request.url like '%.parquet' group by all order by partitioned_url;
----
id%3D3	2
id%3D4	2
id%3D5	2
id%3D6	1
