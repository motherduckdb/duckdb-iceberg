# name: test/sql/local/irc_any_catalog/delete/test_delete_consolidation_transactional.test
# description: test integration with iceberg catalog read
# group: [delete]

require-env ICEBERG_SERVER_AVAILABLE

require-env SECRETS_CREATED_AND_CATALOG_ATTACHED

require avro

require parquet

require iceberg

require httpfs

require core_functions

# Do not ignore 'HTTP' error messages!
set ignore_error_messages

statement ok
set enable_logging=true

statement ok
set logging_level='debug'

statement ok
drop table if exists my_datalake.default.write_v3_update_and_delete;

statement ok
create table my_datalake.default.write_v3_update_and_delete (
	id INTEGER,
	data VARCHAR
) WITH (
	'format-version' = 3
);

statement ok
insert into my_datalake.default.write_v3_update_and_delete values
	(1, 'a'),
	(2, 'b'),
	(3, 'c'),
	(4, 'd'),
	(5, 'e');

query IIII
select _last_updated_sequence_number, _row_id, id, data from my_datalake.default.write_v3_update_and_delete order by _row_id;
----
1	0	1	a
1	1	2	b
1	2	3	c
1	3	4	d
1	4	5	e

# Create the first delete on the table
statement ok
UPDATE my_datalake.default.write_v3_update_and_delete
SET data = data || '_u1'
WHERE id IN (2, 4);

query IIII
select _last_updated_sequence_number, _row_id, id, data from my_datalake.default.write_v3_update_and_delete order by _row_id;
----
1	0	1	a
2	1	2	b_u1
1	2	3	c
2	3	4	d_u1
1	4	5	e

statement ok
begin transaction;

# Create a new delete that needs to invalidate the existing delete and include its contents
statement ok
DELETE FROM my_datalake.default.write_v3_update_and_delete
WHERE id IN (3, 5);

query IIII
select _last_updated_sequence_number, _row_id, id, data from my_datalake.default.write_v3_update_and_delete order by _row_id;
----
1	0	1	a
2	1	2	b_u1
2	3	4	d_u1

# Create yet another delete in the same transaction
statement ok
DELETE FROM my_datalake.default.write_v3_update_and_delete
WHERE id = 2;

# The first transaction's delete should now be skipped, and only the last delete should be used
query IIII
select _last_updated_sequence_number, _row_id, id, data from my_datalake.default.write_v3_update_and_delete order by _row_id;
----
1	0	1	a
2	3	4	d_u1

statement ok
abort

query I
select count(*) from duckdb_logs() where type = 'Iceberg' and message.starts_with('Iceberg Transaction Cleanup') and message.ends_with('.puffin''');
----
2
