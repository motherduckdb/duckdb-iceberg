require-env ICEBERG_SERVER_AVAILABLE

require-env SECRETS_CREATED_AND_CATALOG_ATTACHED

require avro

require parquet

require iceberg

require httpfs

require core_functions

# Do not ignore 'HTTP' error messages!
set ignore_error_messages

statement ok
set enable_logging=true

statement ok
set logging_level='debug'

# INSERT as the first V3 snapshot
statement ok
begin transaction

statement ok
INSERT into my_datalake.default.row_lineage_test_upgraded VALUES
	(8, 'not_replaced'),
	(9, 'also_not_replaced');

query II
select DISTINCT ON(rowid) id, data from my_datalake.default.row_lineage_test_upgraded order by id;
----
1	replaced
2	b_u1
4	d_u1
6	replaced
7	g_new
8	not_replaced
9	also_not_replaced

statement ok
abort;

# Capture the rowids of these rows
statement ok
set variable id2_rowid = (select rowid from my_datalake.default.row_lineage_test_upgraded where id == 2);

statement ok
set variable id6_rowid = (select rowid from my_datalake.default.row_lineage_test_upgraded where id == 6);

# DELETE as the first V3 snapshot
statement ok
begin transaction


statement ok
DELETE FROM my_datalake.default.row_lineage_test_upgraded
	WHERE (id IN (2,6))

query II
select id, data from my_datalake.default.row_lineage_test_upgraded order by id;
----
1	replaced
4	d_u1
7	g_new

# Now verify that these rowids are not present on the table anymore
query I
select id from my_datalake.default.row_lineage_test_upgraded where rowid in (getvariable('id2_rowid'),getvariable('id6_rowid'))
----

statement ok
abort;

# UPDATE as the first V3 snapshot
statement ok
begin transaction

